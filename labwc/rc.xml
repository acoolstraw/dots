<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <core>
    <gap>10</gap>
  </core>

  <theme>
    <name>Combine</name>
    <cornerRadius>8</cornerRadius>
    <font><name>Inter</name><size>10</size></font>
  </theme>

  <keyboard>
    <default/>
    <keybind key="W-Return">
      <action name="Execute"><command>foot</command></action>
    </keybind>
    <keybind key="W-s">
      <action name="Execute"><command>grim -g "$(slurp)" - | swappy -f -</command></action>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute"><command>amixer sset Master 5%-</command></action>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute"><command>amixer sset Master 5%-</command></action>
    </keybind>
    <keybind key="XF86_Launch1">
      <action name="Execute"><command>bemenu-run --prompt "" --fn "JetBrains Mono NL 11" --nb "#1d1f23" --hb "#3f8ee8" --hf "#1d1f23" --fb "#1d1f23" --ff "#cccccc" --nf "#cccccc"</command></action>
    </keybind>
    <keybind key="W-d">
      <action name="Execute"><command>bemenu-run --prompt "" --fn "JetBrains Mono NL 11" --nb "#1d1f23" --hb "#3f8ee8" --hf "#1d1f23" --fb "#1d1f23" --ff "#cccccc" --nf "#cccccc"</command></action>
    </keybind>
    <keybind key="W-F9">
      <action name="Execute"><command>brightnessctl --device intel_backlight set +10%</command></action>
    </keybind>
    <keybind key="W-F8">
      <action name="Execute"><command>brightnessctl --device intel_backlight set 10%-</command></action>
    </keybind>
  </keyboard>

</labwc_config>
